[user]
	name = hli
	email = henrik.lindstrom@lundalogik.se
[push]
	default = simple
[color]
	ui = true
	status = auto
	branch = auto
[core]
	editor = "/usr/bin/vim"
    filemode = false
	preloadindex = true
	fscache = true
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[alias]
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
[gc]
	auto = 256
[difftool]
	prompt = false
